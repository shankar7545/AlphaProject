<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FigerPrintActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/grey_10"
        android:orientation="vertical">


        <TextView
            android:id="@+id/topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/baloo"
            android:text="Welcome back"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/logout"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Enter 4 digit Login Pin"
            android:textColor="@color/colorPrimaryDark1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <com.chaos.view.PinView
            android:id="@+id/pinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:focusable="true"
            android:focusedByDefault="true"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="18sp"
            app:itemCount="4"
            app:itemHeight="48dp"
            app:itemRadius="10dp"
            app:lineColor="@android:color/darker_gray"
            app:viewType="rectangle"
            tools:targetApi="o">

        </com.chaos.view.PinView>


        <LinearLayout
            android:id="@+id/fingerPrintLayout"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="@dimen/spacing_large">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:tint="@color/blue"
                app:srcCompat="@drawable/ic_fingerprint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text=" Login with Touch ID"
                android:textColor="@color/blue" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/logout"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:theme="@style/ProgressBar.colorPrimary"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Logging in .."
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

</RelativeLayout>
