<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/parent_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lyt_noti"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:background="@drawable/bottom_rounded">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10.0dip"
                app:srcCompat="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/ubuntu"
                android:text="OTP"
                android:textColor="@android:color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20.0dip"
            android:layout_marginTop="30.0dip"
            android:fontFamily="@font/ubuntu"
            android:text="We have sent an Otp to your number"
            android:textColor="@android:color/black"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:fontFamily="@font/ubuntu"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/txt_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15.0dip"
            android:layout_marginTop="20.0dip"
            android:fontFamily="@font/ubuntu"
            android:text="Enter the otp received"
            android:textColor="@android:color/black"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/top_right_rounded"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyt_mobile_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="6.0">

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />

                    <requestFocus />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="8.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp5"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_marginStart="8.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginEnd="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:layout_weight="1.0"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5.0dip">

                    <EditText
                        android:id="@+id/et_otp6"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:fontFamily="@font/ubuntu"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textAlignment="center"
                        android:textSize="18.0sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_submit_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="60dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="60dp"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_checkmark" />

                    <TextView
                        android:id="@+id/txt_submit_for_verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Verify"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25.0dip"
                android:layout_marginBottom="15.0dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/ubuntu"
                    android:text="Resend Otp"
                    android:textColor="@android:color/black"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/txt_didnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Didn't receive the OTP?"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_didnt"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/ubuntu"
                        android:text="If you didnt recieved a code"
                        android:textColor="@android:color/black"
                        android:textSize="12.0sp" />

                    <TextView
                        android:id="@+id/txt_resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_marginTop="5.0dip"
                        android:fontFamily="@font/ubuntu"
                        android:text="Resend Otp"
                        android:textColor="@android:color/black"
                        android:textSize="12.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>